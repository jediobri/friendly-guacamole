import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

fig = plt.figure()
ax = fig.gca(projection='3d')
ax.set_xlim3d(-0.8,0.8) #axes scale x
ax.set_ylim3d(-0.8,0.8)
ax.set_zlim3d(-0.8,0.8)

#open csv file and read data in animation gyro scope



ax.quiver(0,0,0,1,1,1, length = 0.5, normalize = True) # plots a 1,1,1 vector from origin
plt.show()
